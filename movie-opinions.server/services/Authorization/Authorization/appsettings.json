{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ServiceUrls": {
    "ProfileService": "https://localhost:7226/",
    "NotificationService": "https://localhost:7086/"
  },
  "Jwt": {
    "Key": "SuperSecretPassword_MustBeAtLeast32CharsLong!",
    "Issuer": "MyAuthService",
    "Audience": "MyReactApp"
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": { "expression": "@Level = 'Information'" }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "Logs/info-.txt",
                  "rollingInterval": "Day"
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": { "expression": "@Level = 'Error'" }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "Logs/errors-.txt",
                  "rollingInterval": "Day"
                }
              }
            ]
          }
        }
      }
    ]
  },
  "AllowedHosts": "*"
}

